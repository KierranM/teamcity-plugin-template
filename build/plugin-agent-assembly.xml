<?xml version="1.0"?>
<assembly>
    <id>plugin-agent-assembly</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>zip</format>
    </formats>
    <files>
        <file>
            <source>../${project.parent.artifactId}-agent/teamcity-plugin.xml</source>
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>${project.parent.groupId}:${project.parent.artifactId}-agent</include>
                <include>${project.parent.groupId}:${project.parent.artifactId}-common</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
                <dependencySets>
                    <dependencySet>
                        <includes>
                            <include>*</include>
                        </includes>
                        <excludes>
                            <exclude>org.slf4j:*</exclude>
                        </excludes>
                    </dependencySet>
                </dependencySets>
            </binaries>
        </moduleSet>
    </moduleSets>
</assembly>

